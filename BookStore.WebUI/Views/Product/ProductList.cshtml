@model List<BookStore.WebUI.Dtos.ProductDtos.ResultProductDto>
@{
    ViewData["Title"] = "Product List";
    Layout = "~/Views/AdminLayout/Layout.cshtml";
    var categoryDictionary = ViewBag.CategoryDictionary as Dictionary<int, string>;
    int count = 0;

}

<div class="container">
    <br /> <br />
    <table class="table table-styling">

        <tr>
            <th>#</th>
            <th>Image</th>
            <th>Book Name</th>
            <th>Author</th>
            <th>Description</th>
            <th>Category</th>
            <th>Stock</th>
            <th>Price</th>
            <th>Delete</th>
            <th>Update</th>
        </tr>
        @foreach (var item in Model)
        {
            count++;
            <tr>
                <td>@count</td>
                <td> <img src="@item.ImageUrl" style="width:75px; height:75px" /></td>
                <td>@item.Name</td>
                <td>@item.Author</td>
                <td>@item.Description</td>
                <td>@(categoryDictionary != null && categoryDictionary.ContainsKey(item.CategoryId) ? categoryDictionary[item.CategoryId] : "No Category")</td>
                <td>@item.Stock</td>
                <td>@item.Price</td>
                <td><a href="/Product/DeleteProduct/@item.ProductId" class="btn btn-danger"><i class="fa fa-trash"></i></a></td>
                <td><a href="/Product/UpdateProduct/@item.ProductId" class="btn btn-info"><i class="fa fa-pen"></i></a></td>
            </tr>
        }

    </table>

    <a href="/Product/CreateProduct" class="btn btn-primary">Add a New Product</a>
</div>

