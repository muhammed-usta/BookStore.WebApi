@using Microsoft.AspNetCore.Http
@inject BookStore.WebUI.Services.LanguageService _localization;

<div id="header-wrap">

	<div class="top-content">
		<div class="container-fluid">
			<div class="row">
				<div class="col-md-6">
					<div class="social-links">
						<ul>
							<li><a href="#"><i class="icon icon-facebook"></i></a></li>
							<li><a href="#"><i class="icon icon-twitter"></i></a></li>
							<li><a href="#"><i class="icon icon-youtube-play"></i></a></li>
							<li><a href="#"><i class="icon icon-behance-square"></i></a></li>
						</ul>
					</div>
				</div>

				<div class="col-md-6">
					<div class="right-element d-flex align-items-center justify-content-end gap-3 flex-wrap">

						<!-- Account -->
						<a href="#" class="user-account for-buy d-flex align-items-center gap-1">
							<i class="icon icon-user"></i><span>Account</span>
						</a>

						<!-- Cart -->
						<a href="#" class="cart for-buy d-flex align-items-center gap-1">
							<i class="icon icon-clipboard"></i><span>Cart:(0 $)</span>
						</a>

						<!-- Search Icon (toggle için) -->
						<a href="#" class="search-button search-toggle d-flex align-items-center" data-selector="#header-wrap">
							<i class="icon icon-search"></i>
						</a>

						<!-- Language Switcher -->
						<div class="language-switcher d-flex align-items-center small">
							<a asp-controller="Default" asp-action="ChangeLanguage" asp-route-culture="en-US">🇺🇸</a> |
							<a asp-controller="Default" asp-action="ChangeLanguage" asp-route-culture="tr-Tr">🇹🇷</a>
						</div>

						<!-- Arama kutusu (gizli durabilir) -->
						<form role="search" method="get" class="search-box d-none">
							<input class="search-field text search-input" placeholder="Search" type="search">
						</form>

					</div>
				</div>
			</div>
		</div>
	</div><!--top-content-->



	<header id="header">
		<div class="container-fluid">
			<div class="row">

				<div class="col-md-2">
					<div class="main-logo">
						<a href="#home"><img src="~/booksaw-1.0.0/images/main-logo.png" alt="logo"></a>
					</div>
				</div>

				<div class="col-md-10">
					<nav id="navbar">
						<div class="main-menu stellarnav">
							<ul class="menu-list">
								<li class="menu-item active"><a href="#home">@_localization.Getkey("Home")</a></li>
								<li class="menu-item"><a href="#featured-books" class="nav-link">@_localization.Getkey("Featured")</a></li>
								<li class="menu-item"><a href="#best-selling" class="nav-link">@_localization.Getkey("Best Selling")</a></li>
								<li class="menu-item"><a href="#popular-books" class="nav-link">@_localization.Getkey("Popular")</a></li>
								<li class="menu-item"><a href="#subscribe" class="nav-link">@_localization.Getkey("Subscribe")</a></li>
							</ul>

							<div class="hamburger">
								<span class="bar"></span>
								<span class="bar"></span>
								<span class="bar"></span>
							</div>
						</div>
					</nav>
				</div>

			</div>
		</div>
	</header>

</div><!--header-wrap-->


<style>
	.right-element {
		display: flex;
		align-items: center;
		justify-content: flex-end;
		gap: 15px;
	}

	.search-button {
		display: inline-flex;
		align-items: center;
		justify-content: center;
		padding: 4px;
		font-size: 18px;
		color: #333;
		cursor: pointer;
	}

		.search-button i {
			font-size: 18px;
			line-height: 1;
			color: #333;
		}

	.language-switcher a {
		text-decoration: none;
		font-size: 14px;
		color: inherit;
		margin: 0 3px;
	}

	.search-box {
		display: none;
	}

	/* Eğer tıklamayla açma yapacaksan: */
	.search-bar.active .search-box {
		display: block;
		position: absolute;
		top: 100%;
		right: 0;
		background: white;
		border: 1px solid #ccc;
		padding: 5px;
		z-index: 999;
	}

</style>

